<div class="card mt-6 has-background-primary-light">
  <div class="card-content">
    <div class="content">
      <h2 class="title">Edit Me</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class = "label"><%= f.label :email %><br /></label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-rounded" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
      <div class="field">
        <label class="label"> 
          <%= f.label :name %><br />
        </label>
          <%= f.text_field :name, class: "input is-rounded" %>
      </div>
      <div class="field">
        <label class="label"> 
          <%= f.label :Dob %><br />
        </label>
          <%= f.date_field :Dob, class: "input is-rounded" %>
      </div>
      <div class="field">
        <label class="label"> 
          <%= f.label :Height %><br />
        </label>
          <%= f.number_field :Height, placeholder: "in cm", class: "input is-rounded" %>
      </div>
      <div class="field">
        <label class="label"> 
          <%= f.label :Weight %><br />
        </label>
          <%= f.number_field :Weight, placeholder: "in Kg", class: "input is-rounded" %>
      </div>
      <% if  !has_role? :admin %>
      <div class="field">
        <label class="label"> 
          <%= f.label :plan %><br />
        </label>
        <div class="select is-info is-rounded is-medium">
          <%= f.select :plan, User.plans.keys.map { |w| [w.humanize, w] } %>
        </div>  
      </div>
      <% end %>
            <div class=" mt-6 mb-6">
               <label class="file-label">
                  <label class="mr-4 label">Profile Image</label>        
                   <%= f.file_field :avatar, class: "file-input" %>
         <span class="file-cta">
                   <span class="file-icon">
                     <i class="fas fa-upload"></i>
                   </span>
                   <span class="file-label">
                      Select Profile Pic....
                   </span>
                 </span>
               </label>
            </div>
      <div class="field">
        <label class="label"> 
          <%= f.label :description %><br />
        </label>
          <%= f.text_field :description, placeholder: "Write something about yourself so that your Trainer can know you better.", class: "textarea is-rounded" %>
      </div>
  <div class="field">
    <label class="label">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  </label>
    <%= f.password_field :password, autocomplete: "new-password" , class: "input is-rounded"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
      <label class="label">
    <%= f.label :password_confirmation %><br />
  </label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "input is-rounded"%>
  </div>

  <div class="field">
      <label class="label">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  </label>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input is-rounded" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "button is-success is-outlined" %>
  </div>
<% end %>


</div>
</div>
</div>

<h3 class="title">Cancel my account</h3>

<p class="subtitle">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "button is-danger is-outlined"%></p>

<%= link_to "Back", :back , class: "mt-3 button is-dark"%>
