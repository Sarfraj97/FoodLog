<div class="card">
	<div class="card-content">
		<div class="content">
			<h2 class="title">Sign up as a Trainee</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>

			<div class="field">
				<label class="label"> 
					<%= f.label :email %><br />
				</label>
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-rounded" %>
			</div>
			<div class="field">
				<label class="label"> 
					<%= f.label :name %><br />
				</label>
					<%= f.text_field :name, class: "input is-rounded" %>
			</div>
			<div class="field">
				<label class="label"> 
					<%= f.label :Dob %><br />
				</label>
					<%= f.date_field :Dob, class: "input is-rounded" %>
			</div>
			<div class="field">
				<label class="label"> 
					<%= f.label :Height %><br />
				</label>
					<%= f.number_field :Height, placeholder: "in cm", class: "input is-rounded" %>
			</div>
			<div class="field">
				<label class="label"> 
					<%= f.label :Weight %><br />
				</label>
					<%= f.number_field :Weight, placeholder: "in Kg", class: "input is-rounded" %>
			</div>
			<div class="field">
				<label class="label"> 
					<%= f.label :Plan %><br />
				</label>
				<div class="select is-info is-rounded is-medium">
					<%= f.select :Plan, User.Plans.keys.map { |w| [w.humanize, w] } %>
				</div>	
			</div>
			<div class="field">
				<label class="label"> 
					<%= f.label :description %><br />
				</label>
					<%= f.text_field :description, placeholder: "Write something about yourself so that your Trainer can know you better.", class: "textarea is-rounded" %>
			</div>
			<div class="field">
				<label class="label"> 
					<%= f.label :password %>
				</label>
					<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> characters minimum)</em>
					<% end %><br />
					<%= f.password_field :password, autocomplete: "new-password", class: "input is-rounded" %>
			</div>

			<div class="field">
				<label class="label"> 
					<%= f.label :password_confirmation %><br />
				</label>
					<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-rounded" %>
			</div>

			<div class="actions">
				<%= f.submit "Sign up", class: "button is-success is-outlined"  %>
			</div>
			<% end %>

			<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
